<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatoSalute">

    <TextView
        style="@style/TextStyle.Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:text="@string/statoSalute"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"
        />

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvTitle"
        android:text="@string/Contavoli"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvContaVoli"
        android:textSize="18sp"
        />

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_below="@id/tvContaVoli"
        android:text="72"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvContaVoliNumero"
        android:textSize="24sp"
        />

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvContaVoliNumero"
        android:text="@string/parassiti"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvParassiti"
        android:textSize="18sp"
        />

    <ProgressBar
        android:id="@+id/barraParassiti"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvParassiti"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="41"
        android:progressDrawable="@drawable/yellowprogress"/>

    <TextView
        android:id="@+id/myTextProgressParassiti"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/barraParassiti"
        android:layout_alignTop="@id/barraParassiti"
        android:layout_alignRight="@id/barraParassiti"
        android:layout_alignBottom="@id/barraParassiti"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="41%"
        android:textSize="28dp"
        />

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:layout_below="@id/barraParassiti"
        android:text="@string/regina"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvRegina"
        android:textSize="18sp"
        />

    <ProgressBar
        android:id="@+id/barraRegina"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvRegina"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="82"
        android:layout_marginBottom="70dp"
        android:progressDrawable="@drawable/greenprogress"/>

    <TextView
        android:id="@+id/myTextProgress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/barraRegina"
        android:layout_alignTop="@id/barraRegina"
        android:layout_alignRight="@id/barraRegina"
        android:layout_alignBottom="@id/barraRegina"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="82%"
        android:textSize="28dp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        android:background="@drawable/bottom_bar"
        app:itemIconTint="@color/black_effective"
        app:itemTextColor="@color/black_effective" />
</RelativeLayout>
</ScrollView>